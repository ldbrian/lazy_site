{
  "version": 2,
  "buildCommand": "pnpm run build",
  "installCommand": "pnpm install --unsafe-perm --shamefully-hoist --force",
  "outputDirectory": "dist",
  "env": {
    "PNPM_SCRIPT_PREVIEW": "true",
    "FORCE_NO_BUILD_CACHE": "1",
    "VERCEL_CACHE_DISABLED": "1",
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  "cleanUrls": true,
  "routes": [
    {
      "src": "/health",
      "dest": "/health.html",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "forceInstall": true,
        "includeFiles": ["**"],
        "zeroConfig": true,
        "nodeVersion": "18.x"
      }
    }
  ]
}